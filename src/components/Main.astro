---
import Article from "@components/MainComponents/Article.astro";
import Slider from "./MainComponents/Slider";
import Header from "@components/Header.jsx";

const images = [
  {
    Desktop: "/images/Desktop/desktop-image-hero-1.jpg",
    Mobile: "/images/Mobile/mobile-image-hero-1.jpg",
  },
  {
    Desktop: "/images/Desktop/desktop-image-hero-2.jpg",
    Mobile: "/images/Mobile/mobile-image-hero-2.jpg",
  },
  {
    Desktop: "/images/Desktop/desktop-image-hero-3.jpg",
    Mobile: "/images/Mobile/mobile-image-hero-3.jpg",
  },
];

const ArticleContent = [
  {
    Title: "Discover innovative ways to decorate",
    Content:
      "We provide unmatched quality, comfort, and style for property owners across the country. Our experts combine form and function in bringing your vision to life. Create a room in your own style with our collection and make your property a reflection of you and what you love.",
  },
  {
    Title: "We are available all across the globe",
    Content:
      "With stores all over the world, it's easy for you to find furniture for your home or place of business. Locally, we're in most major cities throughout the country. Find the branch nearest you using our store locator. Any questions? Don't hesitate to contact us today.",
  },
  {
    Title: "Manufactured with the best materials",
    Content:
      "Our modern furniture store provide a high level of quality. Our company has invested in advanced technology to ensure that every product is made as perfect and as consistent as possible. With three decades of experience in this industry, we understand what customers want for their home and office.",
  },
];
---

<main class="flex flex-col">
  <Slider client:visible images={images} ArticleContent={ArticleContent}>
    <Header client:visible />
  </Slider>
  <Article />
</main>

<style>
  @media (min-width: 1280px) {
    main {
      display: grid;
      grid-template-rows: 1fr auto;
      gap: 0;
    }
  }
</style>
